# Database Passwords
SQLSERVER_SA_PASSWORD=your_strong_password_here
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=your_mongodb_password_here

# RabbitMQ Credentials
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_rabbitmq_password_here

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key_here_at_least_32_characters
JWT_ISSUER=TechnologyStore.IdentityService
JWT_AUDIENCE=TechnologyStore.Clients

# Connection Strings (These will be auto-generated from above values)
SQLSERVER_CONNECTION_STRING=Server=sqlserver;Database={0};User Id=sa;Password=${SQLSERVER_SA_PASSWORD};TrustServerCertificate=True
MONGODB_CONNECTION_STRING=mongodb://${MONGODB_ROOT_USERNAME}:${MONGODB_ROOT_PASSWORD}@mongodb:27017
